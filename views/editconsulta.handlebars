<h1>Editar Cadrastro</h1>
    <hr>
    <form action="/controleconsulta/updateconsulta" method="POST">
        <div class="form-control">
            <input type="hidden" name="id" id="id" value="{{id}}">
            <label for="nome">id:</label>
            <input type="text" name="id" placeholder="Digite a id da consulta" value="{{consulta.id}}">
        </div>

        <div class="form-control">
           
            <label for="nome">Nome do Pet:</label>
            <input type="text" name="pet" placeholder="Digite o nome do pet" value="{{consulta.pet}}">
        </div>

        <div class="form-control">
           
            <label for="nome">Nome do veterinario:</label>
            <input type="text" name="nome_veterinario" placeholder="Digite o nome do veterinario" value="{{consulta.nome_vet}}">
        </div>

         <div class="form-control">
            <label for="quant">Nome do Dono do pet:</label>
            <input type="number" name="dono_pet" placeholder="Digite o nome do dono do pet" value="{{consulta.dono_pet}}">
        </div>
    
        <input type="submit" value="Editar">
    </form>
